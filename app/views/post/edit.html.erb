<% form_with model:@post, url:post_update_path(@post) , method: :patch,  local:true do |f|%>
  

      <div class="container mt-5"> 
           <h2>Edit Posts</h2> 
           <p>
             <%= form.label :title %>
             <%= form.text_field(:post_name ,{:class=>'form-control col-4'})%>
           </p>
             
            <p> 
               <%= form.submit({:class =>'btn btn-secondary'}) %>
            </p>
      </div> 
    
<%end%>