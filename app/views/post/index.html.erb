<h2>Welcome to Home page</h2>

        <%# <h1>Show Courses</h1> %>

<div class="container mt-5" >
  <h3>Posts Lists</h3>
  <%# <p>Combine .table-dark and .table-striped to create a dark, striped table:</p>             %>
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th>posts</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>

    <% @post.each do |p| %>
      <tr>    
          <td><%= p.post_name  %> </td>
        
          <td> <%= link_to "Edit", post_edit_path(p), :class=> 'btn btn-primary' %> &nbsp; <%= link_to "Delete", post_destroy_path(p), :class=> 'btn btn-danger' %></td>     
        
      </tr>
    <% end %>
    
    </tbody>
  </table>
</div>

